---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Linwood <span class="text-gradient">City</span></h1>
		<p class="subtitle">Coming soon</p>
	</main>
</Layout>

<style lang="scss">
	@use '@styles/colors';
	main {
		margin: auto;
		padding: 12rem 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		text-align: center;
	}
	.subtitle {
		font-size: 1.5rem;
		font-weight: 400;
		margin: 0;
		text-align: center;
	}
	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
	.text-gradient {
		background-image: linear-gradient(45deg, colors.$text, colors.$primary 30%, colors.$text 60%);
		animation: gradient 15s ease infinite;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
